{
  "name": "iotistic-housekeeper",
  "version": "1.0.0",
  "description": "Standalone housekeeper service for database maintenance and cleanup tasks",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc --incremental --tsBuildInfoFile .tsbuildinfo",
    "watch": "tsc --watch",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "clean": "rimraf dist",
    "test": "jest",
    "lint": "eslint src --ext .ts"
  },
  "keywords": [
    "iot",
    "housekeeper",
    "maintenance",
    "cleanup",
    "cron",
    "database"
  ],
  "dependencies": {
    "cors": "^2.8.5",
    "cron": "^4.3.3",
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/cron": "^2.4.3",
    "@types/express": "^4.17.21",
    "@types/node": "^20.19.22",
    "@types/pg": "^8.10.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
