{
    "name": "@iotistic/nr-devices-plugin",
    "version": "0.3.0",
    "description": "A Node-RED plugin that adds Iotistic platform tools to the editor",
    "scripts": {
        "build": "rollup -c",
        "watch": "rollup --watch -c",
        "test": "echo \"Error: no test specified\" && exit 1",
        "lint": "eslint -c .eslintrc --ext js,html \"src/**/*.js\"",
        "lint:fix": "eslint -c .eslintrc --ext js,html \"src/**/*.js\" --fix"
    },
    "author": "Iotistic Inc.",
    "license": "Apache-2.0",
    "node-red": {
        "plugins": {
            "iotistic-nr-tools": "dist/plugin.js"
        },
        "nodes": {
            "virtual-device": "dist/lib/nodes/virtual-device.js",
            "mqtt-tree-viewer": "dist/lib/nodes/mqtt-tree-viewer.js",
            "remote-subflow": "dist/lib/nodes/remote-subflow.js"
        }
    },
    "keywords": [
        "Iotistic",
        "node-red"
    ],
    "engines": {
        "node": ">=16.x"
    },
    "devDependencies": {
        "@rollup/plugin-terser": "^0.1.0",
        "@types/mqtt": "^2.5.0",
        "cssnano": "^5.1.14",
        "eslint": "^8.25.0",
        "eslint-config-standard": "^17.0.0",
        "eslint-plugin-html": "7.1.0",
        "fast-glob": "^3.2.12",
        "rollup": "^3.29.5",
        "rollup-plugin-copy": "^3.4.0",
        "rollup-plugin-html": "^0.2.1",
        "rollup-plugin-postcss": "^4.0.2"
    },
    "files": [
        "dist",
        "resources"
    ],
    "dependencies": {
        "@xterm/xterm": "^5.5.0",
        "base64url": "^3.0.1",
        "buffer": "^6.0.3",
        "https": "^1.0.0",
        "level": "^9.0.0",
        "mqtt": "^5.12.0",
        "undici": "^5.12.0"
    }
}
