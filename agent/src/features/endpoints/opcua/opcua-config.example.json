        {
          "name": "flow_rate",
          "nodeId": "ns=2;s=FlowRate",
          "unit": "L/min",
          "dataType": "number"
        },
        {
          "name": "valve_status",
          "nodeId": "ns=2;s=ValveStatus",
          "dataType": "boolean"
        }
      ],
      "metadata": {
        "manufacturer": "Siemens",
        "model": "S7-1500",
