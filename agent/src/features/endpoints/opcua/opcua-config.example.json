        "endpointUrl": "opc.tcp://192.168.1.100:4840",
        "username": "admin",
        "password": "password",
        "securityMode": "None",
        "securityPolicy": "None",
        "connectionTimeout": 10000,
        "sessionTimeout": 60000,
        "keepAliveInterval": 5000
      },
      "dataPoints": [
        {
          "name": "temperature",
          "nodeId": "ns=2;s=Temperature",
          "unit": "Â°C",
          "dataType": "number"
        },
        {
          "name": "pressure",
          "nodeId": "ns=2;s=Pressure",
          "unit": "bar",
          "dataType": "number",
