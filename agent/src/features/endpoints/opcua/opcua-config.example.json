    },
    {
      "name": "scada-gateway",
      "protocol": "opcua",
      "enabled": true,
      "pollInterval": 2000,
      "connection": {
        "endpointUrl": "opc.tcp://192.168.1.101:4840",
        "securityMode": "Sign",
        "securityPolicy": "Basic256Sha256",
        "connectionTimeout": 15000,
        "sessionTimeout": 120000
      },
      "dataPoints": [
        {
          "name": "total_production_count",
          "nodeId": "ns=3;i=1001",
          "dataType": "number"
        },
        {
          "name": "current_speed",
          "nodeId": "ns=3;i=1002",
          "unit": "items/min",
          "dataType": "number"
