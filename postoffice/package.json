{
  "name": "iotistic-postoffice",
  "version": "1.0.1",
  "description": "Standalone email service for Iotistic platform",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc --incremental --tsBuildInfoFile .tsbuildinfo",
    "watch": "tsc --watch",
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "clean": "rimraf dist",
    "test": "jest",
    "test:unit": "jest --testPathPatterns=tests/unit",
    "test:integration": "jest --testPathPatterns=tests/integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "iot",
    "email",
    "notifications",
    "smtp",
    "ses"
  ],
  "dependencies": {
    "@bull-board/api": "^5.10.2",
    "@bull-board/express": "^5.10.2",
    "@bull-board/ui": "^5.10.2",
    "bull": "^4.12.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "handlebars": "^4.7.8",
    "ioredis": "^5.3.2",
    "nodemailer": "^6.9.8",
    "pg": "^8.11.3",
    "winston": "^3.18.3"
  },
  "optionalDependencies": {
    "@aws-sdk/client-ses": "^3.470.0",
    "@aws-sdk/credential-provider-node": "^3.470.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/bull": "^4.10.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/handlebars": "^4.1.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.22",
    "@types/nodemailer": "^6.4.14",
    "@types/pg": "^8.10.0",
    "@types/supertest": "^6.0.3",
    "jest": "^30.2.0",
    "rimraf": "^5.0.5",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
